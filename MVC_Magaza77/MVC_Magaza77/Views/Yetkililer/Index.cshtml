@model IEnumerable<MVC_Magaza77.Models.Yetkililer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Yetkili Ekle", "Kaydetme")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.YetkiliAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.YetkiliAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifre)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Duzenleme", new { id=item.YetkiliID }) |
            @Html.ActionLink("Sil", "Silme", new { id=item.YetkiliID })
        </td>
    </tr>
}

</table>
